<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InlamningsApp.View.SendSmsPage">
  <ScrollView>
    <StackLayout>
      <Label Text="Knappa in nummer: "/>
      <Entry x:Name="SspNumberEntry" Placeholder="Telefonnummer"/>
      <Label Text="Skriv in ditt meddelande: "/>
      <Entry x:Name="MsgEntry" Placeholder="Meddelande"/>
      <Button x:Name="SmsSendBtn" Text="Skicka" Clicked="SmsSendBtn_OnClicked"/>
      <Label x:Name="TimerLabel" Text="{Binding TimeElapsed}"/>
      <Label Text="Ett skämt medans du väntar?"/>
      <Button x:Name="BtnJoke" Text="Joke me" Clicked="BtnJoke_OnClicked"/>
      <Label x:Name="JokeLabel"/>
    </StackLayout>
  </ScrollView>
</ContentPage>